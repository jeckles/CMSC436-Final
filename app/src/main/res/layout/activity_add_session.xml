<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addSessionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Add Session Here"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="30sp"

        />

    <TextView
        android:id="@+id/datePlayedText"
        android:layout_height="wrap_content"
        android:layout_width="245dp"
        android:hint="Date Played"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/addSessionText"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"

        />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="245dp"
        android:layout_height="150dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_below="@id/datePlayedText"/>

    <TextView
        android:id="@+id/gameTypeText"
        android:layout_height="wrap_content"
        android:layout_width="145dp"
        android:hint="Game Type"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/addSessionText"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_below="@id/gameTypeText"
        android:layout_alignParentRight="true"
        >

        <RadioButton
            android:id="@+id/texasHoldemSelection"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Texas Hold'Em"
            />
        <RadioButton
            android:id="@+id/PLOSelection"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Pot Limit Omaha"
            />

    </RadioGroup>




    <EditText
        android:id="@+id/locationEntry"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:hint="Enter Location Here"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/datePicker"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />


    <TextView
        android:id="@+id/smallBlindText"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="Small Blind"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/locationEntry"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/bigBlindText"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="Big Blind"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/locationEntry"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/smallBlindEntry"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="0.00"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@id/smallBlindText"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"

        />
    <EditText
        android:id="@+id/bigBlindEntry"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="0.00"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@id/bigBlindText"
        android:layout_alignParentRight="true"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/buyInText"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="Buy In Amount"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/smallBlindEntry"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/cashOutText"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="Cash Out Amount"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/smallBlindEntry"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/buyInEntry"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="0.00"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@id/buyInText"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"

        />
    <EditText
        android:id="@+id/cashOutEntry"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="0.00"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@id/cashOutText"
        android:layout_alignParentRight="true"
        android:textSize="20sp"

        />

    <TextView
    android:id="@+id/hoursPlayedText"
    android:layout_height="wrap_content"
    android:layout_width="195dp"
    android:hint="Hours Played"
    android:importantForAutofill="no"
    android:inputType="text"
    android:textAlignment="center"
    android:layout_below="@id/cashOutEntry"
    android:layout_alignParentLeft="true"
    android:textSize="20sp"
    android:layout_marginTop="10dp"

    />

    <EditText
        android:id="@+id/hoursPlayedEntry"
        android:layout_height="wrap_content"
        android:layout_width="195dp"
        android:hint="0"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_below="@id/hoursPlayedText"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/buttonSubmitSession"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit Session"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
