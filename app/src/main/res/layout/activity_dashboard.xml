<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pokergamesessiontracker.DashboardActivity">

    <TextView
        android:id="@+id/careerStatsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/careerStats"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        />


    <TextView
        android:id="@+id/moneyMadeText"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="@string/amountMadeOrLost"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/careerStatsText"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/moneyMade"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/moneyMadeText"
        android:text="--"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/sessionsPlayedText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/sessionsPlayed"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/moneyMade"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/sessionsPlayed"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="--"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/sessionsPlayedText"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/returnOnInvestmentText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Return on Investment"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/careerStatsText"
        android:layout_alignParentRight="true"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/returnOnInvestment"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="--"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/returnOnInvestmentText"
        android:layout_alignParentRight="true"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/hoursPlayedText"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="@string/hoursPlayed"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@+id/returnOnInvestment"
        android:layout_alignParentRight="true"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/hoursPlayed"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="--"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/hoursPlayedText"
        android:layout_alignParentRight="true"
        android:textSize="20sp"


        />



    <TextView
        android:id="@+id/sessionsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Recent Sessions"
        android:textAlignment="center"
        android:layout_above="@id/listViewSessions"
        android:textSize="20sp"

        />

    <ListView
        android:id="@+id/listViewSessions"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@id/buttonAddSession"
        />

    <Button
        android:id="@+id/buttonAddSession"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:text="Add Session"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        />

    <Button
        android:id="@+id/buttonViewGraphs"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:text="View Graphs"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
